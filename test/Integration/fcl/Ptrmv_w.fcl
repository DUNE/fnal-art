process_name: PtrmvW

physics:
{
  producers:
  {
    ptrmvWriter:
    {
      module_type: PtrmvProducer
    }
  }

  analyzers:
  {
    ptrmvReader:
    {
      module_type: PtrmvAnalyzer
      input_label: ptrmvWriter
    }
  }

  p1: [ ptrmvWriter ]
  trigger_paths: [ p1 ]
  e1: [ ptrmvReader, o1, pc ]
  end_paths: [ e1 ]
}

outputs:
{
  o1:
  {
    module_type: RootOutput
    fileName: "out.root"
  }
  pc:
  {
    module_type: ProvenanceCheckerOutput
  }
}

source:
{
  module_type: EmptyEvent
  maxEvents: 1
}
