#include "messageDefaults.fcl"

process_name: "TEST"

services.scheduler.allowUnscheduled: true
services.scheduler.wantTracer: true
services.message: @local::messageDefaults

physics:
{
  producers:
  {
    one:
    {
      module_type: IntProducer
      ivalue: 1
    }
    result1:
    {
      module_type: AddIntsProducer
      labels: [ "one" ]
    }
    result2:
    {
      module_type: AddIntsProducer
      labels: [ "result1", "one" ]
    }
    result4:
    {
      module_type: AddIntsProducer
      labels: [ "result2", "result2" ]
    }
  }
  analyzers:
  {
    get:
    {
      module_type: IntTestAnalyzer
      input_label: "result4"
      expected_value: 1
    }
  }
}

source:
{
  module_type: EmptyEvent
  maxEvents: 3
  timeBetweenEvents: 10
  firstTime: 1000000
}
