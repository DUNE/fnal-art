process_name: TESTING


services:
{
  scheduler: { wantTracer: true }
}

source: 
{
  module_type: ToyRawInput
  maxEvents: 5
  process_name: FAKEDAQ
}

physics: 
{
  producers:
  {
    m1:
    {
      module_type: IntProducer
      ivalue: 1001001
     }
  }

  analyzers:
  {
    a1:
    {
      module_type: ToyRawInputTester
      ivalue: 1001001
      process_name: FAKEDAQ
      # see bottom of file for remaining configuration
    }
  }

  reconstruction: [ m1 ]
  e1:             [ a1, o1 ]
  trigger_paths:  [ reconstruction ]
  end_paths:      [ e1 ]
}

outputs:
{
  o1:
  {
    module_type: RootOutput
    fileName:    "root.out"
  }
}

physics.analyzers.a1.num_events_expected: @local::source.maxEvents
